		<class>characteristic.dao.Characteristic</class>
		<class>dao.customer.Customer</class>
		<class>dao.merchant.Merchant</class>
		<class>modification.dao.Modification</class>
		<class>characteristicvalue.dao.CharacteristicValue</class>
		<class>store.dao.Store</class>
		<class>sales.dao.Sales</class>
		<properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/auto_show"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="9404"/>
        </properties>
